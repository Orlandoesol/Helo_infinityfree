# Activar motor de reescritura
RewriteEngine On

# --- Forzar index.php sin mostrarlo ---
# Si no se pide ning√∫n archivo o carpeta, cargar index.php
DirectoryIndex index.php

# --- Reescribir /registros a listado.php ---
RewriteRule ^registros$ listar.php [L]

# --- Reescribir /login a login.php ---
RewriteRule ^login$ login.php [L]

# --- Evitar que se muestre index.php en la URL ---
# Si alguien accede directamente a /index.php, redirigir a /
RewriteCond %{THE_REQUEST} \s/index\.php[\s?]
RewriteRule ^index\.php$ / [R=301,L]
